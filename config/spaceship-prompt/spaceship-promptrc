# customization of spaceship-prompt
# for options see https://github.com/denysdovhan/spaceship-prompt/blob/master/docs/Options.md

# ------------------------------------------------------------------------------
# Load custom sections
# ------------------------------------------------------------------------------
script_path=${0:a:h}
for file in "$script_path"/sections/*.zsh; do
  source "$file"
done
# source "$script_path"/sections/_wip.zsh
# source "$script_path"/sections/_java.zsh
# source "$script_path"/sections/_flutter.zsh

# ------------------------------------------------------------------------------
# Prompt order
# for a as fast prompt as possible, only specify the sections to be loaded
# ------------------------------------------------------------------------------
SPACESHIP_PROMPT_ORDER=(
  time          # Time stamps section
  user          # Username section
  dir           # Current directory section
  host          # Hostname section
  mywip         # git work in progess
  git           # Git section (git_branch + git_status)
  myjava        # custom java section
  myflutter     # custom flutter section
  # maven
  # gradl
  # hg            # Mercurial section (hg_branch  + hg_status)
  # package       # Package version
  # node          # Node.js section
  # ruby          # Ruby section
  # elixir        # Elixir section
  # xcode         # Xcode section
  # swift         # Swift section
  golang        # Go section
  # php           # PHP section
  # rust          # Rust section
  # haskell       # Haskell Stack section
  # julia         # Julia section
  docker        # Docker section
  # aws           # Amazon Web Services section
  # venv          # virtualenv section
  # conda         # conda virtualenv section
  # pyenv         # Pyenv section
  # dotnet        # .NET section
  # ember         # Ember.js section
  kubectl       # Kubectl context section
  # terraform     # Terraform workspace section
  exec_time     # Execution time
  line_sep      # Line break
  # battery       # Battery level and status
  # vi_mode       # Vi-mode indicator
  jobs          # Background jobs indicator
  exit_code     # Exit code section
  char          # Prompt character
)
# ------------------------------------------------------------------------------
# Look and feel
# ------------------------------------------------------------------------------
# a Robby Russell like prompt layout
#
COLOR_PRIMARY="109"
COLOR_SECONDARY="109"

# USER
SPACESHIP_USER_PREFIX="" # remove `with` before username
SPACESHIP_USER_SUFFIX="" # remove space before host

# HOST
# Result will look like this:
#   username@:(hostname)
SPACESHIP_HOST_PREFIX="@:("
SPACESHIP_HOST_SUFFIX=") "

# DIR
SPACESHIP_DIR_PREFIX='' # disable directory prefix, cause it's not the first section
SPACESHIP_DIR_TRUNC='1' # show only last directory

# DOCKER
SPACESHIP_DOCKER_PREFIX="docker:("
SPACESHIP_DOCKER_SUFFIX=") "
SPACESHIP_DOCKER_SYMBOL=""
SPACESHIP_DOCKER_COLOR="${COLOR_PRIMARY}"
SPACESHIP_DOCKER_CONTEXT_PREFIX=" ["
SPACESHIP_DOCKER_CONTEXT_SUFFIX="]"

# GIT
# Disable git symbol
SPACESHIP_GIT_SYMBOL="" # disable git prefix
SPACESHIP_GIT_BRANCH_PREFIX="" # disable branch prefix too
SPACESHIP_GIT_BRANCH_COLOR="${COLOR_PRIMARY}"
# Wrap git in `git:(...)`
SPACESHIP_GIT_PREFIX='git:('
SPACESHIP_GIT_SUFFIX=") "
SPACESHIP_GIT_BRANCH_SUFFIX="" # remove space after branch name
SPACESHIP_GIT_STATUS_COLOR="${COLOR_SECONDARY}"
# Unwrap git status from `[...]`
SPACESHIP_GIT_STATUS_PREFIX=" "
SPACESHIP_GIT_STATUS_SUFFIX=""

# FLUTTER
SPACESHIP_FLUTTER_PREFIX="flutter:("
SPACESHIP_FLUTTER_SUFFIX=") "
SPACESHIP_FLUTTER_SYMBOL=""
SPACESHIP_FLUTTER_COLOR="${COLOR_PRIMARY}"
SPACESHIP_FLUTTER_CHANNEL_COLOR="${COLOR_SECONDARY}"

# GOLANG
SPACESHIP_GOLANG_PREFIX="go:("
SPACESHIP_GOLANG_SUFFIX=") "
SPACESHIP_GOLANG_SYMBOL=""
SPACESHIP_GOLANG_COLOR="${COLOR_PRIMARY}"

# JAVA
SPACESHIP_JAVA_PREFIX="java:("
SPACESHIP_JAVA_SUFFIX=") "
SPACESHIP_JAVA_SYMBOL=""
SPACESHIP_JAVA_COLOR="${COLOR_PRIMARY}"

# KUBECTL
SPACESHIP_KUBECTL_PREFIX="k8s:("
SPACESHIP_KUBECTL_SUFFIX=") "
SPACESHIP_KUBECTL_SYMBOL=""
SPACESHIP_KUBECTL_COLOR="${COLOR_PRIMARY}"

# KUBECONTEXT
SPACESHIP_KUBECONTEXT_PREFIX=" ["
SPACESHIP_KUBECONTEXT_SUFFIX="]"
SPACESHIP_KUBECONTEXT_SYMBOL=""

# NODE
SPACESHIP_NODE_PREFIX="node:("
SPACESHIP_NODE_SUFFIX=") "
SPACESHIP_NODE_SYMBOL=""
SPACESHIP_NODE_COLOR="${COLOR_PRIMARY}"

# RUBY
SPACESHIP_RUBY_PREFIX="ruby:("
SPACESHIP_RUBY_SUFFIX=") "
SPACESHIP_RUBY_SYMBOL=""
SPACESHIP_RUBY_COLOR="${COLOR_PRIMARY}"

# SWIFT
SPACESHIP_SWIFT_PREFIX="swift:("
SPACESHIP_SWIFT_SUFFIX=") "
SPACESHIP_SWIFT_SYMBOL=""
SPACESHIP_SWIFT_COLOR="${COLOR_PRIMARY}"

# VENV
SPACESHIP_VENV_PREFIX="venv:("
SPACESHIP_VENV_SUFFIX=") "
SPACESHIP_VENV_SUFFIX=") "
SPACESHIP_VENV_COLOR="${COLOR_PRIMARY}"

# WIP
SPACESHIP_WIP_PREFIX="("
SPACESHIP_WIP_SUFFIX=") "
SPACESHIP_WIP_SYMBOL=""

# XCODE
SPACESHIP_XCODE_PREFIX="xcode:("
SPACESHIP_XCODE_SUFFIX=") "
SPACESHIP_XCODE_SYMBOL=""
SPACESHIP_XCODE_COLOR="${COLOR_PRIMARY}"

# ------------------------------------------------------------------------------
# Settings
# ------------------------------------------------------------------------------

SPACESHIP_CHAR_SYMBOL="$ "
SPACESHIP_CHAR_SYMBOL_ROOT="# "
SPACESHIP_NODE_SHOW=false
SPACESHIP_PACKAGE_SHOW=false
SPACESHIP_KUBECTL_SHOW=true
SPACESHIP_KUBECTL_VERSION_SHOW=false # disable to speed up prompt when no remote server is available
SPACESHIP_KUBECONTEXT_SHOW=true
SPACESHIP_KUBECONTEXT_COLOR_GROUPS=(
  # https://upload.wikimedia.org/wikipedia/commons/1/15/Xterm_256color_chart.svg
  100  minikube
  # namespace: environment
  100  '\(.*-dev\)$'
  100  '\(.*-utv\)$'
  228  '\(.*-sys\)$'
  228  '\(.*-qa\)$'
  228  '\(.*-acc\)$'
  202  '\(.*-sit\)$'
  196  '\(.*-prod\)$'
  196  '^.*-prod-.*\(.*\)$'
)

SPACESHIP_VI_MODE_SHOW=false
SPACESHIP_VI_MODE_INSERT=[INSERT]
SPACESHIP_VI_MODE_NORMAL=[NORMAL]
SPACESHIP_VI_MODE_COLOR=yellow
# workaround to update prompt with VI modes (insert/normal)
# however it turns off beam shape cursor so I will turn off VI_MODE_SHOW for now
#eval spaceship_vi_mode_enable
