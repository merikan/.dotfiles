# customization of spaceship-prompt
# for options see https://spaceship-prompt.sh/config/prompt/

# ------------------------------------------------------------------------------
# Load local custom sections
# ------------------------------------------------------------------------------
script_path=${0:a:h}
for file in "$script_path"/sections/*.zsh; do
  source "$file"
done

spaceship remove ansible
spaceship remove docker
spaceship remove docker_compose

spaceship add --before git wip  # add custom section
spaceship add flutter           # add flutter external section


# ------------------------------------------------------------------------------
# Look and feel, a Robby Russell like prompt layout
# ------------------------------------------------------------------------------
#

# colors
COLOR_PRIMARY="109"
COLOR_SECONDARY="109"

# CHAR
SPACESHIP_CHAR_SYMBOL="$ "
SPACESHIP_CHAR_SYMBOL_ROOT="# "

# USER
SPACESHIP_USER_PREFIX="" # remove `with` before username
SPACESHIP_USER_SUFFIX="" # remove space before host

# HOST
SPACESHIP_HOST_PREFIX="@:("
SPACESHIP_HOST_SUFFIX=") "

# DIR
SPACESHIP_DIR_PREFIX=""  # disable directory prefix, cause it's not the first section
SPACESHIP_DIR_SUFFIX=" "
SPACESHIP_DIR_SHORT="true"

# PACKAGE
SPACESHIP_PACKAGE_PREFIX="project:("
SPACESHIP_PACKAGE_SUFFIX=") "
SPACESHIP_PACKAGE_SYMBOL=""
SPACESHIP_PACKAGE_COLOR="${COLOR_PRIMARY}"

# DOCKER
SPACESHIP_DOCKER_PREFIX="docker:("
SPACESHIP_DOCKER_SUFFIX=") "
SPACESHIP_DOCKER_SYMBOL=""
SPACESHIP_DOCKER_COLOR="${COLOR_PRIMARY}"
SPACESHIP_DOCKER_CONTEXT_PREFIX=" ["
SPACESHIP_DOCKER_CONTEXT_SUFFIX="]"

# GIT
SPACESHIP_GIT_PREFIX='git:('
SPACESHIP_GIT_SUFFIX=") "
SPACESHIP_GIT_SYMBOL=""
SPACESHIP_GIT_BRANCH_PREFIX=""
SPACESHIP_GIT_BRANCH_COLOR="${COLOR_PRIMARY}"
SPACESHIP_GIT_BRANCH_SUFFIX=""
SPACESHIP_GIT_STATUS_COLOR="${COLOR_SECONDARY}"
SPACESHIP_GIT_STATUS_PREFIX=" "
SPACESHIP_GIT_STATUS_SUFFIX=""

# DART
SPACESHIP_DART_PREFIX="dart:("
SPACESHIP_DART_SUFFIX=") "
SPACESHIP_DART_SYMBOL=""
SPACESHIP_DART_COLOR="${COLOR_PRIMARY}"

# FLUTTER
SPACESHIP_FLUTTER_PREFIX="flutter:("
SPACESHIP_FLUTTER_SUFFIX=") "
SPACESHIP_FLUTTER_SYMBOL=""
SPACESHIP_FLUTTER_COLOR="${COLOR_PRIMARY}"

# LUA
SPACESHIP_LUA_PREFIX="lua:("
SPACESHIP_LUA_SUFFIX=") "
SPACESHIP_LUA_SYMBOL=""
SPACESHIP_LUA_COLOR="${COLOR_PRIMARY}"

# GOLANG
SPACESHIP_GOLANG_PREFIX="go:("
