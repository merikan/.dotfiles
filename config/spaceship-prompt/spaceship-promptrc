# KUBECTL
SPACESHIP_KUBECTL_SHOW=true
SPACESHIP_KUBECTL_PREFIX="k8s:("
SPACESHIP_KUBECTL_SUFFIX=") "
SPACESHIP_KUBECTL_SYMBOL=""
SPACESHIP_KUBECTL_COLOR="${COLOR_PRIMARY}"

# KUBECTL_VERSION
SPACESHIP_KUBECTL_VERSION_SHOW=false
# KUBECONTEXT
SPACESHIP_KUBECTL_CONTEXT_PREFIX=" ["
SPACESHIP_KUBECTL_CONTEXT_SUFFIX="]"
SPACESHIP_KUBECTL_CONTEXT_SYMBOL=""

# SPACESHIP_KUBECTL_VERSION_SHOW=false # disable to speed up prompt when no remote server is available
SPACESHIP_KUBECTL_CONTEXT_SHOW=true
SPACESHIP_KUBECTL_CONTEXT_COLOR_GROUPS=(
  # https://upload.wikimedia.org/wikipedia/commons/1/15/Xterm_256color_chart.svg
  100  minikube
  # namespace: environment
  100  '\(.*-dev\)$'
  100  '\(.*-utv\)$'
  228  '\(.*-sys\)$'
  228  '\(.*-qa\)$'
  228  '\(.*-acc\)$'
  228  '\(.*-at\)$'
  202  '\(.*-sit\)$'
  196  '\(.*-prod\)$'
  196  '^.*-prod-.*\(.*\)$'
)

# NIX
SPACESHIP_NIX_SHELL_SHOW=true
SPACESHIP_NIX_SHELL_PREFIX="nix:("
SPACESHIP_NIX_SHELL_SUFFIX=") "
SPACESHIP_NIX_SHELL_SYMBOL=""
SPACESHIP_NIX_SHELL_COLOR="${COLOR_PRIMARY}"

SPACESHIP_VI_MODE_SHOW=false
SPACESHIP_VI_MODE_INSERT=[INSERT]
SPACESHIP_VI_MODE_NORMAL=[NORMAL]
SPACESHIP_VI_MODE_COLOR=yellow
# workaround to update prompt with VI modes (insert/normal)
